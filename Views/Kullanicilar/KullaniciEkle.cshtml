@model webOdev3.Models.Kullanicilar

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Kullanıcı Kayıt Ol</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Kullanicilar" asp-action="Register" method="post" id="registerForm">
                        <!-- Kullanıcı Adı -->
                        <div class="form-group mb-3">
                            <label for="FirstName">Ad</label>
                            <input type="text" class="form-control" id="FirstName" name="FirstName" placeholder="Adınızı girin" required />
                        </div>

                        <!-- Soyadı -->
                        <div class="form-group mb-3">
                            <label for="LastName">Soyad</label>
                            <input type="text" class="form-control" id="LastName" name="LastName" placeholder="Soyadınızı girin" required />
                        </div>

                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label for="Email">Email Adresi</label>
                            <input type="email" class="form-control" id="Email" name="Email" placeholder="Email adresinizi girin" required />
                        </div>

                        <!-- Şifre -->
                        <div class="form-group mb-3">
                            <label for="Password">Şifre</label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Şifrenizi girin" required />
                        </div>

                        <!-- Şifre Tekrarı -->
                        <div class="form-group mb-3">
                            <label for="ConfirmPassword">Şifre Tekrarı</label>
                            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Şifrenizi tekrar girin" required />
                            <div id="passwordError" class="text-danger" style="display:none;">Şifreler uyuşmuyor!</div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Role">Rol</label>
                            <select class="form-control" id="Role" name="Role" required>
                                <option value="" disabled selected>Rolünüzü seçin</option>
                                <option value="Admin">Admin</option>
                                <option value="Editor">Kullanıcı</option>
                            </select>
                        </div>

                        <!-- Kayıt Ol Butonu -->
                        <div class="d-grid gap-2">
                            <!--<button type="submit" class="btn btn-primary">Kayıt Ol</button>-->
                            <a asp-controller="Kullanicilar" asp-action="Index" class="btn btn-primary">Kayıt Ol</a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p>
                        Zaten hesabınız var mı?
                        <a asp-controller="Home" asp-action="Index" class="text-primary">Giriş yap</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript ile Şifre Doğrulama -->
<script>
    document.getElementById("registerForm").addEventListener("submit", function (event) {
        var password = document.getElementById("Password").value;
        var confirmPassword = document.getElementById("ConfirmPassword").value;

        if (password !== confirmPassword) {
            event.preventDefault(); // Formun gönderilmesini engelle
            document.getElementById("passwordError").style.display = "block"; // Hata mesajını göster
        } else {
            document.getElementById("passwordError").style.display = "none"; // Hata mesajını gizle
        }
    });
</script>

