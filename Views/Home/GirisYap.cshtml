@model webOdev3.Models.Kullanicilar

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="login-container">
    <div class="login-card">
        <h2 class="welcome-text">Serap Kuaför</h2>
        <div class="logo">
            <span class="logo-icon">KS</span>
        </div>

        <div class="card-body">
            <!-- Hata Mesajı Gösterimi -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

        <form asp-controller="Home" asp-action="GirisYap" method="post">
            <!-- Email -->
            <div class="form-group">
                <input asp-for="Email" type="email" placeholder="Email" class="input-field" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-group">
                <input asp-for="Sifre" type="password" placeholder="Şifre" class="input-field" required />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>

                <!-- Şifremi Unuttum -->
                <div class="text-end mb-3">
                    <a asp-controller="Home" asp-action="SifremiUnuttum" class="text-primary">Şifremi Unuttum</a>
                </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="login-btn">Giriş Yap</button>
            </div>
        </form>

        <!-- Sign Up Link -->
        <div class="signup-text">
            <p>Hesabınız yok mu? <a asp-controller="Kullanicilar" asp-action="KullaniciEkle">Kayıt Ol</a></p>
        </div>
    </div>
</div>