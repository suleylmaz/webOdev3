
@model webOdev3.Models.Kullanicilar

@{
    ViewData["Title"] = "Login";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Giriş Yap</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Home" asp-action="GirisYap" method="post">
                        <!-- Email Adresi -->
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Email adresinizi girin" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Şifre -->
                        <div class="form-group mb-3">
                            <label asp-for="Sifre" class="form-label"></label>
                            <input asp-for="Sifre" type="password" class="form-control" placeholder="Şifrenizi girin" />
                            <span asp-validation-for="Sifre" class="text-danger"></span>
                        </div>

                        <!-- Şifremi Unuttum -->
                        <div class="text-end mb-3">
                            <a asp-controller="Account" asp-action="ForgotPassword" class="text-primary">Şifremi Unuttum</a>
                        </div>

                        <!-- Giriş Yap Butonu -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p>
                        Hesabınız yok mu?
                        <a asp-controller="Kullanicilar" asp-action="KullaniciEkle" class="text-primary">Kayıt olun</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

